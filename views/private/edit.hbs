  <h3>edit outfit</h3>

    <img src="{{outfit.top.imageUrl}}" alt="Top image">
    <img src="{{outfit.bottom.imageUrl}}" alt="Bottom image">
    <img src="{{outfit.shoes.imageUrl}}" alt="Shoes image">

  <form action="/outfit/{{id}}/edit" method="post">
    <select name="top">
      {{#each pieces.top}}
        <option name="top" value='{{name}}'>{{name}}</option>
      {{/each}}
    </select>
    <select name="bottom">
      {{#each pieces.bottom}}
        <option name="top" value='{{name}}'>{{name}}</option>
      {{/each}}
    </select>
    <select name="shoes">
      {{#each pieces.shoes}}
        <option name="top" value='{{name}}'>{{name}}</option>
      {{/each}}
    </select>
    <button type="submit">update</button>
  </form>
</section>